{{>layout/header}}

<article>

    <br>
    <br>
    <div class="container">

        <div class="h4 pb-2 mb-4 text-primary border-bottom border-primary">
            게시글수정
        </div>

        <a class="btn btn-outline-success" href="/posts/save">게시글등록</a>

        <form>
            <br>
            <br>
            <div class="form-group">
                글번호
                <input class="form-control" type="text"  name="id"  id="id" value="{{post.id}}" readonly/>
            </div>

            <br>
            <br>

            <div class="form-group">
                글제목
                <input class="form-control" type="text"  name="title"  id="title" value="{{post.title}}" />
            </div>

            <br>
            <br>

            <div class="form-group">
                작성자
                <input class="form-control" type="text"  name="author" id="author" value="{{post.author}}" readonly/>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label for="" class="form-label">내용</label>
                <textarea class="form-control"  name="content" id="content" rows="3" >{{post.content}}</textarea>
            </div>
            <br>
            <br>
         </form>
        <hr>
        <br>
        <br>

        <div style="display:inline-block;text-align:center;">
            <button type="reset" class="btn btn-outline-primary" >원래대로</button>
            <button type="submit"class="btn btn-outline-primary" id="modifyBtn">방명록수정하기</button>
        </div>
    </div><!-- 컨테이너 -->
</article>


{{>layout/footer}}